     <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(project) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <%= f.collection_check_boxes :categories, Category.all, :id, :category_type, include_hidden: false %>

  <p>
    <%= f.submit "Add Project" %>
  </p>
<% end %>
